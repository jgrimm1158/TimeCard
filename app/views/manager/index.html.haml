- if @weeks.count > 0
  %h1 Time cards awaiting approval
  %ul
    %li
      = @weeks
      - for week in @weeks
        %ul
          - for card in @cards.where(:week_starting => week)
            %li
              = link_to "#{card.user.first_name} #{card.user.last_name}", :action => :show, :id => card.id                                                    
- else
  %h1 You have no cards to approve. Get back to work!

= link_to 'Back', :controller => :users, :action => :show, :id => current_user.id